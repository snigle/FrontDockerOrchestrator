# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /dashboard                  controllers.Application.dashboard
GET     /copieVM                    controllers.Application.copieVM_action
GET     /deleteVM/:id               controllers.Application.deleteVM_action(id)
GET     /xml                        controllers.Application.vappXml
GET    /container/start/:id        controllers.ContainersController.start(id)
GET    /container/stop/:id        controllers.ContainersController.stop(id)
POST    /container/create        controllers.ContainersController.create

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
